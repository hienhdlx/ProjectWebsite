@model WebShopShoes.Models.Customers

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Share/_Layout.cshtml";
}
    <link href="~/assets/css/mystyle.css" rel="stylesheet" type="text/css">
<h1>Xóa khách hàng</h1>

<h3>Bạn có muốn xóa bản ghi này ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 form-detail">
            Họ và tên
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2 form-detail">
            Tên đăng nhập
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2 form-detail">
            Mật khẩu
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2 form-detail">
            Email
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 form-detail">
            Địa chỉ
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2 form-detail">
            Điện thoại
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2 form-detail">
            Quyền
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.IdRole)
        </dd>
        <dt class="col-sm-2 form-detail">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10 form-detail">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <button style="width: 82px; height: 47px; font-size: 20px" type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"> Xóa</i></button> |

        <button style="width: 211px; height: 48px; font-size: 20px" type="submit" class="btn btn-primary"><i class="fas fa-arrow-left">  <a asp-action="Index" style="color: whitesmoke">Quay lại danh sách</a></i></button>
    </form>
</div>
