@model WebShopShoes.Models.Customers

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Share/_Layout.cshtml";
}
<link href="~/assets/css/mystyle.css" rel="stylesheet" type="text/css">
<h1>Create</h1>

<h4>Thêm mới khách hàng</h4>
<hr />

<div class="row form-content">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-4">
                    <label asp-for="FullName" class="control-label">Họ và tên</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="FullName" class="form-control" />
                </div>
                <span asp-validation-for="FullName" class="text-danger">*</span>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label asp-for="Username" class="control-label">Tên đăng nhập</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="Username" class="form-control" />
                </div>
                <span asp-validation-for="Username" class="text-danger">*</span>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label asp-for="Password" class="control-label">Mật khẩu</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="Password" class="form-control" />
                </div>
                <span asp-validation-for="Password" class="text-danger">*</span>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label asp-for="Email" class="control-label">Email</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger">*</span>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label asp-for="Address" class="control-label">Địa chỉ</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="Address" class="form-control" />
                </div>
                <span asp-validation-for="Address" class="text-danger">*</span>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label asp-for="Phone" class="control-label">Điện thoại</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="Phone" class="form-control" />
                </div>
                <span asp-validation-for="Phone" class="text-danger">*</span>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    <label asp-for="IdRole" class="control-label">Điện thoại</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="IdRole" class="form-control" />
                </div>
                <span asp-validation-for="IdRole" class="text-danger">*</span>
            </div>

            @*<div class="form-group">
                <div class="col-md-4">
                    <label asp-for="CreateDate" class="control-label">Điện thoại</label>
                </div>
                <div class="col-md-7">
                    <input asp-for="CreateDate" class="form-control" />
                </div>
                <span asp-validation-for="CreateDate" class="text-danger">*</span>
            </div>*@

            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

