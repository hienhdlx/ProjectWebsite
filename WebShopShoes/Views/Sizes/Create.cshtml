@model WebShopShoes.Models.Size

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Share/_Layout.cshtml";
}
    <link href="~/assets/css/mystyle.css" rel="stylesheet" type="text/css">

<h4>Thêm size mới</h4>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <div class="col-md-4 form-create">
                    <label asp-for="NameSize">Size</label>
                </div>
                <div class="col-md-7 form-create">
                    <input autocomplete="off" asp-for="NameSize" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="NameSize">*</span>
            </div>
            <div class="col-md-8 form-create">
                <button id="btnsave" style="float: right; width: 142px; height: 48px; font-size: 20px" type="submit" class="btn btn-primary"><i class="fas fa-palette">  Thêm mới</i></button>
            </div>
        </form>
    </div>
</div>

<div>
    <button style="width: 211px; height: 48px; font-size: 20px" type="submit" class="btn btn-primary"><i class="fas fa-arrow-left">  <a asp-action="Index" style="color:whitesmoke">Quay lại danh sách</a></i></button>
</div>

